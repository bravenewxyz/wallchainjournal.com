---
const currentDate = new Date().toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<nav class="border-b border-gray-200">
  <div class="max-w-7xl mx-auto">
    {/* Top bar with date and actions */}
    <div class="flex justify-between items-center py-2 px-4 text-sm border-b border-gray-200">
      <div class="hidden sm:block">{currentDate}</div>
      <div class="flex gap-4">
        <a href="/subscribe" class="text-blue-700 hover:text-blue-900 font-semibold">Subscribe</a>
        <a href="/sign-in" class="text-gray-700 hover:text-gray-900">Sign In</a>
      </div>
    </div>

    {/* Main navigation */}
    <div class="py-4 px-4">
      <div class="flex justify-between items-center">
        <div class="flex gap-4 sm:gap-8">
          <button class="hover:text-gray-600 lg:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <a href="/" class="font-serif text-xl sm:text-3xl font-bold tracking-tight">
            The Wall Chain Journal
          </a>
        </div>
        <div class="flex gap-4 items-center">
          <button class="hover:text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    {/* Secondary navigation */}
    <div class="hidden lg:flex justify-center gap-6 py-2 px-4 text-sm font-medium border-t border-gray-200 overflow-x-auto">
      <a href="/markets" class="hover:text-blue-700 whitespace-nowrap">Markets</a>
      <a href="/tech" class="hover:text-blue-700 whitespace-nowrap">Technology</a>
      <a href="/defi" class="hover:text-blue-700 whitespace-nowrap">DeFi</a>
      <a href="/nfts" class="hover:text-blue-700 whitespace-nowrap">NFTs</a>
      <a href="/regulation" class="hover:text-blue-700 whitespace-nowrap">Regulation</a>
      <a href="/web3" class="hover:text-blue-700 whitespace-nowrap">Web3</a>
      <a href="/mining" class="hover:text-blue-700 whitespace-nowrap">Mining</a>
      <a href="/opinion" class="hover:text-blue-700 whitespace-nowrap">Opinion</a>
    </div>
  </div>
</nav> 