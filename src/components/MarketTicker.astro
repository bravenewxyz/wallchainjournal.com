---
const marketData = [
  { symbol: 'BTC', name: 'Bitcoin', price: 89420, change: 5.2 },
  { symbol: 'ETH', name: 'Ethereum', price: 4892, change: 3.8 },
  { symbol: 'BNB', name: 'Binance Coin', price: 320, change: -1.2 },
  { symbol: 'SOL', name: 'Solana', price: 142, change: 8.5 },
  { symbol: 'ONCHAIN', name: '/onchain', price: 42.69, change: 420 },
  { symbol: 'DOGE', name: 'Dogecoin', price: 0.12, change: -2.3 },
];
---

<div class="bg-black text-white py-1 overflow-hidden">
  <div class="animate-ticker inline-flex gap-8 whitespace-nowrap">
    {marketData.map(coin => (
      <div class="flex items-center gap-2">
        <span class="font-medium">{coin.symbol}</span>
        <span>${coin.price.toLocaleString()}</span>
        <span class={coin.change >= 0 ? "text-green-400" : "text-red-400"}>
          {coin.change >= 0 ? "+" : ""}{coin.change}%
        </span>
      </div>
    ))}
  </div>
</div>

<style>
  .animate-ticker {
    animation: ticker 30s linear infinite;
  }

  @keyframes ticker {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style> 