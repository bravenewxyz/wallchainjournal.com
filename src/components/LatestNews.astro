---
interface NewsArticle {
  category: string;
  title: string;
  excerpt: string;
  author: string;
  timestamp: string;
  url: string;
  imageUrl?: string;
  isPremium?: boolean;
}

const latestArticles: NewsArticle[] = [
  {
    category: "MARKETS",
    title: "Ethereum Futures ETF Approval Sparks Rally Across Layer-1 Tokens",
    excerpt: "The SEC's approval of multiple Ethereum futures ETFs has triggered a broader market rally, with alternative Layer-1 tokens seeing double-digit gains.",
    author: "Sarah Chen",
    timestamp: "5 minutes ago",
    url: "/markets/ethereum-futures-etf",
    imageUrl: "/images/eth-futures.jpg",
    isPremium: true
  },
  {
    category: "TECHNOLOGY",
    title: "Major Banks Test Cross-Border CBDC Platform",
    excerpt: "A consortium of central banks has successfully completed a large-scale test of cross-border CBDC transactions using a new blockchain protocol.",
    author: "Michael Rodriguez",
    timestamp: "27 minutes ago",
    url: "/tech/cbdc-platform-test"
  },
  {
    category: "DEFI",
    title: "Aave Proposes Revolutionary Risk Management System",
    excerpt: "The leading DeFi protocol is set to implement an AI-powered risk management system to prevent future exploits.",
    author: "Alex Thompson",
    timestamp: "1 hour ago",
    url: "/defi/aave-risk-management",
    isPremium: true
  },
  {
    category: "REGULATION",
    title: "EU Parliament Passes Landmark Crypto Framework",
    excerpt: "New regulations set clear guidelines for crypto businesses operating within the European Union.",
    author: "Emma Laurent",
    timestamp: "2 hours ago",
    url: "/regulation/eu-framework"
  },
  {
    category: "ANALYSIS",
    title: "The Real Impact of Bitcoin Halving on Mining Economics",
    excerpt: "An in-depth analysis of how the upcoming Bitcoin halving will affect mining profitability and network security.",
    author: "David Kumar",
    timestamp: "3 hours ago",
    url: "/analysis/bitcoin-halving-impact",
    isPremium: true
  }
];
---

<div class="divide-y divide-gray-200">
  {latestArticles.map((article) => (
    <article class="py-4 first:pt-0 last:pb-0">
      <a href={article.url} class="group block">
        <div class="flex justify-between items-start gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <span class="text-xs font-bold text-blue-700">{article.category}</span>
              {article.isPremium && (
                <span class="px-2 py-0.5 text-[10px] font-bold bg-yellow-100 text-yellow-800 rounded">
                  PREMIUM
                </span>
              )}
            </div>
            
            <h3 class="font-serif text-lg font-bold leading-snug mb-1 group-hover:text-blue-700">
              {article.title}
            </h3>
            
            <p class="text-sm text-gray-600 line-clamp-2 mb-2">
              {article.excerpt}
            </p>
            
            <div class="flex items-center text-xs text-gray-500 gap-2">
              <span class="font-medium">{article.author}</span>
              <span>â€¢</span>
              <span>{article.timestamp}</span>
            </div>
          </div>
          
          {article.imageUrl && (
            <div class="w-24 h-24 flex-shrink-0">
              <img
                src={article.imageUrl}
                alt=""
                class="w-full h-full object-cover rounded"
              />
            </div>
          )}
        </div>
      </a>
    </article>
  ))}
  
  <div class="pt-4">
    <a 
      href="/latest" 
      class="inline-flex items-center text-sm font-semibold text-blue-700 hover:text-blue-900"
    >
      View All Latest News
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        class="h-4 w-4 ml-1" 
        viewBox="0 0 20 20" 
        fill="currentColor"
      >
        <path 
          fill-rule="evenodd" 
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" 
          clip-rule="evenodd" 
        />
      </svg>
    </a>
  </div>
</div>

<style>
  /* Optional: Add smooth transition for hover effects */
  article {
    transition: all 0.2s ease-in-out;
  }
</style> 