---
interface NewsItem {
  category: string;
  title: string;
  timestamp: string;
  url: string;
}

const latestNews: NewsItem[] = [
  {
    category: "MARKETS",
    title: "Bitcoin ETF Volume Surpasses Traditional Gold ETFs in Historic First",
    timestamp: "12 mins ago",
    url: "/markets/btc-etf-volume"
  },
  {
    category: "TECHNOLOGY",
    title: "Ethereum Layer-2s See 500% Surge in Daily Active Users",
    timestamp: "43 mins ago",
    url: "/tech/ethereum-l2-surge"
  },
  {
    category: "REGULATION",
    title: "SEC Chairman Admits He Just Doesn't Get It, Man",
    timestamp: "1 hour ago",
    url: "/regulation/sec-stablecoin"
  },
  {
    category: "DEFI",
    title: "Uniswap Users Suggest Installing 'Have You Tried Turning It Off and On Again?' Protocol",
    timestamp: "2 hours ago",
    url: "/defi/uniswap-insurance"
  },
  {
    category: "NFTs",
    title: "Luxury Brands Discover JPEGs Are Worth More Than Actual Products",
    timestamp: "2 hours ago",
    url: "/nfts/luxury-brands"
  }
];

// Popular Topics/Tags
const topics = [
  "Bitcoin ETF",
  "Layer 2",
  "DeFi",
  "NFTs",
  "Regulation",
  "Web3 Gaming",
  "DAOs",
  "Metaverse"
];
---

<aside class="w-full">
  {/* Latest News Section */}
  <div class="mb-8">
    <h2 class="font-serif text-lg font-bold border-b-2 border-black pb-2 mb-4">
      Latest News
    </h2>
    <div class="space-y-4">
      {latestNews.map((item) => (
        <article class="group">
          <a href={item.url} class="block">
            <span class="text-xs font-bold text-blue-700">{item.category}</span>
            <h3 class="text-base font-serif leading-snug group-hover:text-blue-700">
              {item.title}
            </h3>
            <span class="text-xs text-gray-500">{item.timestamp}</span>
          </a>
        </article>
      ))}
    </div>
  </div>

  {/* Market Analysis Section */}
  <div class="mb-8 p-4 bg-gray-50">
    <h2 class="font-serif text-lg font-bold border-b-2 border-black pb-2 mb-4">
      Market Analysis
    </h2>
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <span class="text-sm">Fear & Greed Index</span>
        <span class="text-sm font-bold text-green-600">75 - Greed</span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-sm">BTC Dominance</span>
        <span class="text-sm font-bold">52.3%</span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-sm">24h Volume</span>
        <span class="text-sm font-bold">$142.8B</span>
      </div>
    </div>
  </div>

  {/* Popular Topics */}
  <div class="mb-8">
    <h2 class="font-serif text-lg font-bold border-b-2 border-black pb-2 mb-4">
      Popular Topics
    </h2>
    <div class="flex flex-wrap gap-2">
      {topics.map((topic) => (
        <a
          href={`/topic/${topic.toLowerCase().replace(/\s+/g, '-')}`}
          class="px-3 py-1 text-sm bg-gray-100 hover:bg-gray-200 rounded-full"
        >
          {topic}
        </a>
      ))}
    </div>
  </div>

  {/* Newsletter Signup */}
  <div class="p-4 bg-blue-50 rounded-lg">
    <h2 class="font-serif text-lg font-bold mb-2">
      Get the Daily Chain Digest
    </h2>
    <p class="text-sm text-gray-600 mb-4">
      The most important crypto news and analysis, delivered to your inbox daily.
    </p>
    <form 
      action="https://warpcast.com/~/channel/onchain"
      method="get" 
      target="_blank"
      class="space-y-3"
    >
      <input
        type="email"
        placeholder="Enter your email"
        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        type="submit"
        class="w-full bg-blue-700 text-white py-2 px-4 rounded-md hover:bg-blue-800 transition-colors"
      >
        Sign Up Free
      </button>
    </form>
  </div>
</aside>

<style>
  /* Optional: Add smooth transition for hover effects */
  article {
    transition: all 0.2s ease-in-out;
  }
</style> 