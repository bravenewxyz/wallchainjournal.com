---
const currentYear = new Date().getFullYear();

const sections = {
  "Markets": [
    "Cryptocurrencies",
    "DeFi Protocols",
    "NFT Markets",
    "Trading Data",
    "Market Analysis",
    "ETFs & Funds"
  ],
  "Technology": [
    "Blockchain",
    "Web3",
    "Layer 2",
    "Smart Contracts",
    "Mining",
    "Infrastructure"
  ],
  "Industry": [
    "Regulation",
    "Enterprise",
    "Banking",
    "Innovation",
    "Startups",
    "Policy"
  ],
  "Features": [
    "Investigation",
    "Long Reads",
    "Opinion",
    "Research",
    "Magazine",
    "Podcasts"
  ]
};

const tools = [
  "Crypto Portfolio",
  "Watchlist",
  "Price Alerts",
  "Newsletter",
  "WSJ Chain PRO"
];

const company = [
  "About Us",
  "Editorial Standards",
  "Careers",
  "Contact Us",
  "Advertise",
  "Code of Conduct"
];
---

<footer class="bg-gray-900 text-gray-300 pt-12 mt-12">
  <div class="max-w-7xl mx-auto px-4">
    {/* Main Footer Content */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 pb-12">
      {/* Sections */}
      {Object.entries(sections).map(([title, items]) => (
        <div>
          <h3 class="text-white font-serif font-bold mb-4">{title}</h3>
          <ul class="space-y-2">
            {items.map(item => (
              <li>
                <a 
                  href={`/${title.toLowerCase()}/${item.toLowerCase().replace(/ /g, '-')}`} 
                  class="text-sm hover:text-white transition-colors"
                >
                  {item}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    {/* Tools & Company Info */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 py-8 border-t border-gray-800">
      <div>
        <h3 class="text-white font-serif font-bold mb-4">Tools</h3>
        <ul class="grid grid-cols-2 gap-2">
          {tools.map(tool => (
            <li>
              <a 
                href={`/tools/${tool.toLowerCase().replace(/ /g, '-')}`}
                class="text-sm hover:text-white transition-colors"
              >
                {tool}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-white font-serif font-bold mb-4">Company</h3>
        <ul class="grid grid-cols-2 gap-2">
          {company.map(item => (
            <li>
              <a 
                href={`/company/${item.toLowerCase().replace(/ /g, '-')}`}
                class="text-sm hover:text-white transition-colors"
              >
                {item}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    {/* Social Media & App Downloads */}
